package balls;

import java.awt.Color;
import java.awt.Component;
import java.awt.Point;

import util.Randomizer;

public class CurveBall extends ABall{
	double theta = -Math.PI / 20 * Randomizer.Singleton.randomInt(-1, 1);
	
	public CurveBall(Point location, int radius, Point velocity, Color color, Component canvas) {
		super(location, radius, velocity, color, canvas);
	}
	
	@Override
	public void specifyBall() {
		Point velocity_old = velocity;
		velocity.x = (int)Math.round(velocity_old.x * Math.cos(theta) - velocity_old.y * Math.sin(theta));
		velocity.y = (int)Math.round(velocity_old.y * Math.cos(theta) + velocity_old.x * Math.sin(theta));
	}
}
