package view;

import java.awt.BorderLayout;
import java.awt.EventQueue;
import java.awt.Graphics;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import java.awt.Color;
import javax.swing.JButton;
import javax.swing.JTextField;

public class BallGUI extends JFrame {

	/**
	 * 
	 */
	private static final long serialVersionUID = -6220961448303331834L;

	private JPanel contentPane =  new JPanel();
	
	// Create a special panel with an overridden paintComponent method.
    private JPanel _pnlCanvas = new JPanel() {
        /**
		 * 
		 */
		private static final long serialVersionUID = -6952656931251224807L;

		public void paintComponent(Graphics g) {
           super.paintComponent(g);  // clear the panel and redo the background
           _view2ModelAdpt.paint(g);  // call back to the model to paint the sprites
        }
    };
	
	// The model adapter is initialized to a no-op to insure that system always has well-defined behavior
    private static IView2ModelAdapter _view2ModelAdpt = IView2ModelAdapter.NULL_OBJECT; 
    private JTextField textField_select;

    
	public void start() {
		setVisible(true);
	}
	
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					BallGUI frame = new BallGUI(_view2ModelAdpt);
					frame.start();
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public BallGUI(IView2ModelAdapter _view2ModelAdpt) {
		setTitle("Bouncing Balls");
		setExtendedState(JFrame.MAXIMIZED_BOTH); 
		//setUndecorated(true);
		this._view2ModelAdpt = _view2ModelAdpt ;  

		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);
		
		contentPane.add(_pnlCanvas, BorderLayout.CENTER);
		_pnlCanvas.setBackground(Color.BLUE);
		
		JPanel panel_top = new JPanel();
		panel_top.setBackground(Color.CYAN);
		contentPane.add(panel_top, BorderLayout.NORTH);
		
		textField_select = new JTextField();
		panel_top.add(textField_select);
		textField_select.setColumns(10);
		
		JButton button_select = new JButton("Select Ball");
		panel_top.add(button_select);
		
		JButton button_clear = new JButton("Clear All");
		panel_top.add(button_clear);
	}
	
    public void update(){
    	_pnlCanvas.repaint();
//    	System.out.println("view update");
    }
}
