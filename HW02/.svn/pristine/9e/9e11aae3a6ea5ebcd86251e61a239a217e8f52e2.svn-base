package balls;

import java.awt.Color;
import java.awt.Component;
import java.awt.Point;

import util.Randomizer;

/**
 * 
 * The ColorChangingBall is a subclass of ABall.
 * 
 * @author Chen Zeng (cz39)
 * @author Rong Hu (rh41)
 * @version 20170908
 * @since 20170908
 *
 */

public class ColorChangingBall extends ABall {
	private final int total = 20;
	private int cnt = total;

	/**
	 * Constructor.
	 */
	public ColorChangingBall(Point location, int radius, Point velocity, Color color, Component canvas) {
		super(location, radius, velocity, color, canvas);
	}

	/**
	 * Random change the color of the ball.
	 */
	@Override
	public void specifyBall() {
		cnt--;
		if (cnt == 0) {
			set_color(Randomizer.Singleton.randomColor());
			cnt = total;
		}
	}
}
