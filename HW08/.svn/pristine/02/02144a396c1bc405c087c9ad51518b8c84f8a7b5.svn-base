package model.cmd;

import java.awt.Container;
import java.rmi.RemoteException;

import javax.swing.JLabel;

import common.DataPacketAlgoCmd;
import common.DataPacketChatRoom;
import common.ICmd2ModelAdapter;
import common.IUser;

/**
 * The command to display the text in the data packet.
 *
 */
public class DisplayTextCmd extends DataPacketAlgoCmd<String> {

	/**
	 * 
	 */
	private static final long serialVersionUID = -4146905191178168531L;
	private ICmd2ModelAdapter cmd2ModelAdapter;
	
	@Override
	public Object apply(Class<?> index, DataPacketChatRoom<String> host, Object... params) {
		String text = (String) host.getData();
		IUser sender = host.getSender();
		Container panel = cmd2ModelAdapter.getContainer();
		try {
			panel.add(new JLabel(sender.getName() + "@" + sender.getUUid() + ":" + text));
		} catch (RemoteException e) {
			e.printStackTrace();
		}
		return text;
	}

	@Override
	public void setCmd2ModelAdpt(ICmd2ModelAdapter cmd2ModelAdapter) {
		this.cmd2ModelAdapter = cmd2ModelAdapter;
	}

}
