package model.chatroom;

import java.io.Serializable;
import java.util.UUID;

import team1.DataPacketChatRoom;
import team1.IChatRoom;
import team1.IUser;

/**
 * chat room proxy.
 *
 */
public class ProxyChatRoom implements IChatRoom, Serializable {

	/**
	 * serialVersionUID
	 */
	private static final long serialVersionUID = 8904743511885338335L;
	/**
	 * the name of the chat room.
	 */
	private IChatRoom chatRoom;
	
	/**
	 * constructor
	 * @param chatRoom a chat room.
	 */
	public ProxyChatRoom(IChatRoom chatRoom) {
		this.chatRoom = chatRoom;
	}

	@Override
	public String getName() {
		return chatRoom.getName();
	}

	@Override
	public Iterable<IUser> getUsers() {
		return chatRoom.getUsers();
	}

	@Override
	public <T> void sendPacketAsyn(DataPacketChatRoom<T> data) {
		chatRoom.sendPacketAsyn(data);
		
	}

	@Override
	public Iterable<DataPacketChatRoom<?>> sendPacket(DataPacketChatRoom<?> data) {
		return chatRoom.sendPacket(data);
	}

	@Override
	public boolean addUser(IUser user) {
		return chatRoom.addUser(user);
	}

	@Override
	public boolean removeUser(IUser user) {
		return chatRoom.removeUser(user);
	}

	@Override
	public void sendMessage(String text, IUser user) {
		chatRoom.sendMessage(text, user);
	}
	
	@Override
	public String toString() {
		return getName();
	}

	@Override
	public UUID getUUID() {
		return chatRoom.getUUID();
	}
	
	@Override
	public boolean equals(Object obj) {
		if (this == obj) return true;
		if (!(obj instanceof IChatRoom)) return false;
		IChatRoom that = (IChatRoom) obj;
		return this.getUUID().equals(that.getUUID());
	}
	
	@Override
	public int hashCode() {
		return getUUID().hashCode();
	}
}
