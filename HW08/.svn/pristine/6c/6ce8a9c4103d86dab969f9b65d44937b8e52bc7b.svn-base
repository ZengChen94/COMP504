package model.host;

import java.util.ArrayList;
import java.util.List;

import common.IChatRoom;

/**
 * The AHost abstract class.
 *
 */
public abstract class AHost implements IHost {
	/**
	 * the server name of the host, which is used to bind the host to local registry.
	 */
	public final String hostName;
	/**
	 * the ip address where the host is created.
	 */
	public final String hostIP;
	/**
	 * the port the host is exported.
	 */
	public final int boundPort;
	/**
	 * the chat rooms the host created or joined.
	 */
	protected List<IChatRoom> chatRooms;
	/**
	 * constructor.
	 * @param hostName the server name of the host, which is used to bind the host to local registry.
	 * @param hostIP the ip address where the host is created.
	 * @param boundPort the port the host is exported.
	 */
	public AHost(String hostName, String hostIP, int boundPort) {
		this.hostName = hostName;
		this.hostIP = hostIP;
		this.boundPort = boundPort;
		chatRooms = new ArrayList<>();
	}
	
	@Override
	public List<IChatRoom> getChatRoomList() {
		return chatRooms;
	}
	
	/**
	 * add this host to chat room.
	 * @param chatRoom The chat room the host to connect.
	 */
	public void addChatRoom(IChatRoom chatRoom) {
		chatRooms.add(chatRoom);
	}
	
	@Override
	public String getHostDescription() {
		return hostName + "@" + hostIP + ":" + boundPort; 
	}
	
//	@Override
//	public String toString() {
//		return hostName + "@" + hostIP + ":" + boundPort;
//	}
	
}
