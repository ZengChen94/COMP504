package model.chatroom;

import java.io.Serializable;
import java.util.UUID;

import common.DataPacketChatRoom;
import common.IChatRoom;
import common.IReceiver;

/**
 * chat room proxy.
 *
 */
public class ProxyChatRoom implements IChatRoom, Serializable {

	/**
	 * serialVersionUID
	 */
	private static final long serialVersionUID = 8904743511885338335L;
	/**
	 * the name of the chat room.
	 */
	private IChatRoom chatRoom;
	
	/**
	 * constructor
	 * @param chatRoom a chat room.
	 */
	public ProxyChatRoom(IChatRoom chatRoom) {
		this.chatRoom = chatRoom;
	}

	@Override
	public String getName() {
		return chatRoom.getName();
	}
	
	@Override
	public String toString() {
		return getName();
	}

	@Override
	public UUID getUUID() {
		return chatRoom.getUUID();
	}
	
	@Override
	public boolean equals(Object obj) {
		if (this == obj) return true;
		if (!(obj instanceof IChatRoom)) return false;
		IChatRoom that = (IChatRoom) obj;
		return this.getUUID().equals(that.getUUID());
	}
	
	@Override
	public int hashCode() {
		return getUUID().hashCode();
	}

	@Override
	public Iterable<IReceiver> getIReceiverStubs() {
		return chatRoom.getIReceiverStubs();
	}

	@Override
	public <T> void sendPacket(DataPacketChatRoom<T> data) {
		chatRoom.sendPacket(data);
	}

	@Override
	public boolean addIReceiverStub(IReceiver receiver) {
		return chatRoom.addIReceiverStub(receiver);
	}

	@Override
	public boolean removeIReceiverStub(IReceiver receiver) {
		return chatRoom.addIReceiverStub(receiver);
	}

	@Override
	public boolean addIReceiverStubLocally(IReceiver receiver) {
		return chatRoom.addIReceiverStub(receiver);
	}

	@Override
	public boolean removeIReceiverStubLocally(IReceiver receiver) {
		return chatRoom.addIReceiverStub(receiver);
	}
}
