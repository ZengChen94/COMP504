package model.strategy;

import model.Ball;
import util.Randomizer;

/**
 * Following is the class defining the ball with random size changing
 * 
 * @author cz39
 * @author ker7
 */
public class BreathingStrategy implements IUpdateStrategy {
	private final int total = 20;
	private int cnt = total;

	/**
	 * Random change the radius of the ball.
	 * @param ball Ball to be updated.
	 */
	@Override
	public void updateState(Ball ball) {
		cnt--;
		if (cnt == 0) {
			ball.setRadius(Randomizer.singleton.randomInt(10, 30));
			cnt = total;
		}
	}
}
