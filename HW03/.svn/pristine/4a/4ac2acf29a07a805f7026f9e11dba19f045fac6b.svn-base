package model.strategy;

import java.awt.Rectangle;

import model.Ball;
import util.Randomizer;

public class DrunkenStrategy implements IUpdateStrategy {
	private int cnt = Randomizer.singleton.randomInt(5, 10);

	@Override
	public void updateState(Ball ball) {
		cnt--;
		if (cnt == 0) {
			ball.setVelocity(Randomizer.singleton.randomVel(new Rectangle(0, 0, 30, 30)));
			cnt = Randomizer.singleton.randomInt(5, 10);
		}
	}
}