package model.strategy;

import model.Ball;

/**
 * Following is the class defining the ball with combining strategies.
 * 
 * @author cz39
 * @author ker7
 */
public class MultiStrategy implements IUpdateStrategy {
	private IUpdateStrategy strategy1, strategy2;
	
	/**
	 * Set multiple strategies.
	 * @param strategy1 The first strategy to be combined.
	 * @param strategy2 The second strategy to be combined.
	 */
	public MultiStrategy(IUpdateStrategy strategy1, IUpdateStrategy strategy2) {
		this.strategy1 = strategy1;
		this.strategy2 = strategy2;
	}

	/**
	 * Update the state of ball using strategy1 and strategy2.
	 * @param ball Ball to be updated.
	 */
	@Override
	public void updateState(Ball ball) {
		strategy1.updateState(ball);
		strategy2.updateState(ball);
	}
}